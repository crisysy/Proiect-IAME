@model Proiect_IAME.SqlViews.Programare

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Programare</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="form-group">
            @Html.LabelFor(model => model.Serviciu, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.Serviciu, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Serviciu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Administrator"))
    {
        <div>
            @Html.ActionLink("  Înapoi", "Admin")
        </div>
    }
    else
    {
        <div>
            @Html.ActionLink("  Înapoi", "Index")
        </div>
    }
}
