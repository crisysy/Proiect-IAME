@model Proiect_IAME.SqlViews.Programare

@{
    ViewBag.Title = "Data";
}
<p>
    <br>
    <br>
</p>
<h2>Selectați data pentru care doriți să realizați programarea</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Programare</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Data, new { @type = "date", @class = "form-control datetpicker" })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Serviciu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Serviciu, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Serviciu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    if (ViewBag.indisponibil == 1)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>În ziua aleasă nu mai eistă intervale disponibile.</strong>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Verifică disponibilitatea" class="btn btn-outline-primary" />
        </div>
    </div>

}

<h5>Ghid lungimi</h5>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link " data-toggle="tab" href="#scurt">Scurt</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " data-toggle="tab" href="#mediu">Mediu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " data-toggle="tab" href="#lung">Lung</a>
    </li>
</ul>
