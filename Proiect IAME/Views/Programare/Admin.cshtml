@using Proiect_IAME.ValueObjects
@model IEnumerable<Proiect_IAME.SqlViews.Programare>

@{
    ViewBag.Title = "Admin";
}
<p><br></p>
<h2>Admin</h2>

<p class="btn btn-outline-primary">@Html.ActionLink("Programare nouă", "SelectDate", null, htmlAttributes: new { @style = "color:#818689;" })</p>

<table class="table table-hover">
    <tr class="table-active">
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serviciu)
        </th>
        <th>
            Client
        </th>
        <th>
            Contact
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Data)
    </td>
    <td>
        @item.Interval.GetDescription()
    </td>
    <td>
        @item.Serviciu.GetDisplayName()
    </td>
    <td>
        @item.Nume
    </td>
    <td>
        @item.Contact
    </td>
    <td>
        @Html.ActionLink("Anulează", "Delete", new { id = item.Id }) | @Html.ActionLink("Modifică", "Edit", new { id = item.Id })
    </td>
</tr>
    }

</table>
